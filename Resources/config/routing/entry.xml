<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bizbink_blog_entry" path="/" methods="GET">
        <default key="_controller">BlogBundle:Entry:index</default>
        <default key="page">1</default>
    </route>

    <route id="bizbink_blog_entry_page" path="/{page}">
        <default key="_controller">BlogBundle:Entry:page</default>
        <default key="page">1</default>
        <requirement key="page">\d+</requirement>
    </route>

    <route id="bizbink_blog_entry_view" path="/view/{id}" methods="GET POST">
        <default key="_controller">BlogBundle:Entry:view</default>
        <default key="id">1</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="bizbink_blog_entry_create" path="/create" methods="GET POST">
        <default key="_controller">BlogBundle:Entry:create</default>
    </route>

    <route id="bizbink_blog_entry_edit" path="/edit/{id}" methods="GET POST">
        <default key="_controller">BlogBundle:Entry:edit</default>
        <default key="id">1</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="bizbink_blog_entry_delete" path="/delete" methods="POST">
        <default key="_controller">BlogBundle:Entry:delete</default>
    </route>

</routes>